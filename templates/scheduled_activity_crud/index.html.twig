{% extends 'base-back.html.twig' %}

{% block title %}Page CRUD Daily Activit√© | Infantia{% endblock %}

{% block body %}
    <h1>ScheduledActivity index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Starting_hour</th>
                <th>Ending_hour</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for scheduled_activity in scheduled_activities %}
            <tr>
                <td>{{ scheduled_activity.id }}</td>
                <td>{{ scheduled_activity.startingHour ? scheduled_activity.startingHour|date('H:i:s') : '' }}</td>
                <td>{{ scheduled_activity.endingHour ? scheduled_activity.endingHour|date('H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_scheduled_activity_crud_show', {'id': scheduled_activity.id}) }}">Voir</a>
                    <a href="{{ path('app_scheduled_activity_crud_edit', {'id': scheduled_activity.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_scheduled_activity_crud_new') }}">Ajouter</a>
{% endblock %}
