{% extends 'base-back.html.twig' %}

{% block title %}Page d'accueil | Infantia{% endblock %}

{% block body %}
    <h1>Child</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ child.id }}</td>
            </tr>
            <tr>
                <th>First_name</th>
                <td>{{ child.firstName }}</td>
            </tr>
            <tr>
                <th>Last_name</th>
                <td>{{ child.lastName }}</td>
            </tr>
            <tr>
                <th>Birth_date</th>
                <td>{{ child.birthDate ? child.birthDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Entrance_date</th>
                <td>{{ child.entranceDate ? child.entranceDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Household_income</th>
                <td>{{ child.householdIncome }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_child_crud_index') }}">back to list</a>

    <a href="{{ path('app_child_crud_edit', {'id': child.id}) }}">edit</a>

    {{ include('child_crud/_delete_form.html.twig') }}
{% endblock %}
