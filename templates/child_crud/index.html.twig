<!DOCTYPE html>

<title>Child index</title>

{% block body %}
    <h1>Child index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>First_name</th>
                <th>Last_name</th>
                <th>Birth_date</th>
                <th>Entrance_date</th>
                <th>Household_income</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for child in children %}
            <tr>
                <td>{{ child.id }}</td>
                <td>{{ child.firstName }}</td>
                <td>{{ child.lastName }}</td>
                <td>{{ child.birthDate ? child.birthDate|date('Y-m-d') : '' }}</td>
                <td>{{ child.entranceDate ? child.entranceDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ child.householdIncome }}</td>
                <td>
                    <a href="{{ path('app_child_crud_show', {'id': child.id}) }}">show</a>
                    <a href="{{ path('app_child_crud_edit', {'id': child.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_child_crud_new') }}">Create new</a>
{% endblock %}
