                    <input type="time" id="mar_entrance_hour" name="presence[mar][entrance_hour]" required disabled/>
                </div>  
                <div>
                    <label for="mar_exit_hour">Départ</label>
                    <input type="time" id="mar_exit_hour" name="presence[mar][exit_hour]" required disabled/>
                </div>  
            </li>
            <li>
                Mercredi
                <div>
                    <label for="mer_presence">Présent</label>
                    <input type="checkbox" id="mer_presence" name="presence[mer][is_present]" />
                </div>
                <div>
                    <label for="mer_entrance_hour">Arrivée</label>
                    <input type="time" id="mer_entrance_hour" name="presence[mar][entrance_hour]" required disabled/>
                </div>  
                <div>
                    <label for="mer_exit_hour">Départ</label>
                    <input type="time" id="mer_exit_hour" name="presence[mer][exit_hour]" required disabled/>
                </div>  
            </li>
            <li>
                Jeudi
