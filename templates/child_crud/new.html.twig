{% extends 'base-back.html.twig' %}

{% block title %}Page d'accueil | Infantia{% endblock %}

{% block body %}
    <h1>Create new Child</h1>

    {{ include('child_crud/_form.html.twig') }}
    <section id="representative">
        <div>
            <label for="representative">Rechercher représentant</label>
            <input type="search" id="representative" name="representative">
        </div>
        <div>
            <button type="button" id="add_representative">Ajouter un représentant</button>
        </div>
        <div>
            <label for="first_name">Prénom</label>
            <input type="text" id="first_name" name="first_name" required disabled>
        </div>
        <div>
            <label for="last_name">Nom</label>
            <input type="text" id="last_name" name="last_name" required disabled>
        </div>

        <div id="result"></div>
    </section>
    <section id="presence">
        <ul> 
            <li>
                Lundi
                <div>
                    <label for="lun_presence">Présent</label>
                    <input type="checkbox" id="lun_presence" name="presence" required/>
                </div>
                <div>
                    <label for="lun_entrance_hour">Arrivée</label>
                    <input type="time" id="lun_entrance_hour" name="entrance_hour" required disabled/>
                </div>  
                <div>
                    <label for="mon_exit_hour">Départ</label>
                    <input type="time" id="mon_exit_hour" name="exit_hour" required disabled/>
                </div>  
            </li>
            <li>
                Mardi
                <div>
                    <label for="mar_presence">Présent</label>
                    <input type="checkbox" id="mar_presence" name="presence" required/>
                </div>
                <div>
                    <label for="mar_entrance_hour">Arrivée</label>
                    <input type="time" id="mar_entrance_hour" name="entrance_hour" required disabled/>
                </div>  
                <div>
                    <label for="mar_exit_hour">Départ</label>
                    <input type="time" id="mar_exit_hour" name="exit_hour" required disabled/>
                </div>  
            </li>
            <li>
                Mercredi
                <div>
                    <label for="mer_presence">Présent</label>
                    <input type="checkbox" id="mer_presence" name="presence" required/>
                </div>
                <div>
                    <label for="mer_entrance_hour">Arrivée</label>
                    <input type="time" id="mer_entrance_hour" name="entrance_hour" required disabled/>
                </div>  
                <div>
                    <label for="mer_exit_hour">Départ</label>
                    <input type="time" id="mer_exit_hour" name="exit_hour" required disabled/>
                </div>  
            </li>
            <li>
                Jeudi
                <div>
                    <label for="jeu_presence">Présent</label>
                    <input type="checkbox" id="jeu_presence" name="presence" required/>
                </div>
                <div>
                    <label for="jeu_entrance_hour">Arrivée</label>
                    <input type="time" id="jeu_entrance_hour" name="entrance_hour" required disabled/>
                </div>  
                <div>
                    <label for="jeu_exit_hour">Départ</label>
                    <input type="time" id="jeu_exit_hour" name="exit_hour" required disabled/>
                </div>  
            </li>
            <li>
                Vendredi
                <div>
                    <label for="ven_presence">Présent</label>
                    <input type="checkbox" id="ven_presence" name="presence" required/>
                </div>
                <div>
                    <label for="ven_entrance_hour">Arrivée</label>
                    <input type="time" id="ven_entrance_hour" name="entrance_hour" required disabled/>
                </div>  
                <div>
                    <label for="ven_exit_hour">Départ</label>
                    <input type="time" id="ven_exit_hour" name="exit_hour" required disabled/>
                </div>  
            </li>

        </ul>
    </section>

    <a href="{{ path('app_child_crud_index') }}">Retour</a>

    {% block javascripts %} 
        {{ parent() }}
        <script src="{{asset('js/child_representative.js')}}"></script>
    {% endblock %}
{% endblock %}
