                    <label for="ven_exit_hour">Départ</label>
                    <input type="time" id="ven_exit_hour" name="presence[ven][exit_hour]" required disabled/>
                </div>  
            </li>
        </ul>
    </section>

    <a href="{{ path('app_child_crud_index') }}">Retour</a>

    {% block javascripts %} 
        {{ parent() }}
        <script src="{{asset('js/child_crud_new.js')}}"></script>
    {% endblock %}
{% endblock %}
