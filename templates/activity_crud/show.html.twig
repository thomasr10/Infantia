{% extends 'base-back.html.twig' %}

{% block title %}Page CRUD Activité | Infantia{% endblock %}

{% block body %}
    <h1>Activité</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ activity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ activity.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ activity.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_activity_crud_index') }}">Retour</a>

    <a href="{{ path('app_activity_crud_edit', {'id': activity.id}) }}">Modifier</a>

    {{ include('activity_crud/_delete_form.html.twig') }}
{% endblock %}
